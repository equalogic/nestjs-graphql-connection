{
  "name": "@madsci/graphql-pagination",
  "version": "0.2.3",
  "description": "Relay-style pagination for GraphQL using Connections, Edges and Cursors.",
  "author": "Madscience Ltd",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madscience/graphql-pagination.git"
  },
  "scripts": {
    "prebuild": "rimraf dist && npm run barrels:generate",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cp package.json README.md dist/",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .ts --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "postversion": "npm run postbuild",
    "barrels:generate": "barrelsby --config barrelsby.json",
    "release": "np"
  },
  "dependencies": {
    "graphql-relay": "^0.6.0",
    "joi": "^17.1.1"
  },
  "devDependencies": {
    "@nestjs/common": "^7.1.1",
    "@nestjs/core": "^7.1.1",
    "@nestjs/graphql": "^7.4.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/jest": "^26.0.0",
    "@types/joi": "^14.3.4",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "=2.34.0",
    "@typescript-eslint/parser": "^2.22.0",
    "barrelsby": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "lint-staged": "^10.2.7",
    "np": "^6.2.3",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.1",
    "@nestjs/core": "^7.1",
    "@nestjs/graphql": "^7.4",
    "reflect-metadata": "^0.1.13"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run barrels:generate && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
